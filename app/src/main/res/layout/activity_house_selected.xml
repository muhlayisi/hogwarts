<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseSelected">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_house_name"
                android:text=""
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txt_house_founder"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_name"
                android:text="Founder: "
                android:textSize="14sp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txt_house_head"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_founder"
                android:text="Head of House: "
                android:textSize="14sp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txt_house_ghost"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_head"
                android:text="House Ghost: "
                android:textSize="14sp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txt_house_mascot"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_ghost"
                android:text="House Mascot: "
                android:textSize="14sp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txt_house_school"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_mascot"
                android:text="School: "
                android:textSize="14sp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txt_house_values"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_school"
                android:text="Values: "
                android:textSize="14sp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txt_house_colors"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_values"
                android:text="Colours: "
                android:textSize="14sp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>


        </RelativeLayout>

        <GridLayout
            android:id="@+id/gridlayout_members"
            android:layout_marginTop="30dp"
            android:columnCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@id/txt_house_colors"
                android:text="House Members:"
                android:layout_margin="20dp"
                android:textSize="16dp"
                android:textColor="#183C13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </GridLayout>
    </LinearLayout>

</ScrollView>